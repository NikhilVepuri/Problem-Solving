//2
//if you're searching for exact index and returning mid in loop, go with while(left<=right), else if you're looking for boundary and returning out side while(left<right)
class Solution {
    public int search(int[] nums, int target) {
        int left = 0;
        int right = nums.length-1;
        int mid = 0;
        while(left <= right){
            mid = (left+right)/2;
            if(nums[mid] == target)
                return mid;
            if(nums[mid] >= nums[left]){
                if(nums[mid] >= target && nums[left] <= target){
                    right = mid-1;
                }
                else
                    left =  mid+1;
            }
            else{
                if(nums[mid] <= target && nums[right] >= target){
                    left = mid+1;
                }
                else
                    right =  mid-1;
            }
        }
        // if(nums[left])
        return -1;
    }
}
