class Solution {
    public boolean validPalindrome(String str) {
        char[] s = str.toCharArray();
        int left =0 ;
        int right = str.length()-1;
        while(left<right){
            if(s[left]!=s[right]){
                return isPalindrome(s, left+1, right)||isPalindrome(s, left, right-1);
            }
                    left++;
                    right--;
            }
            return true;
        }
        
        public boolean isPalindrome(char[] s, int left, int right){
            while(left<right){
                if(s[left]!=s[right])
                    return false;
                left++;
                right--;
            }
            return true;
        }

    }
//approach 2- similar
class Solution {
    public boolean validPalindrome(String str) {
       int left = 0;
       int right = str.length()-1;
    
       while(left <= right){
            if(str.charAt(left) == str.charAt(right)){
                left++;
            right--;
                continue;
            }else{
                if(isPalindrome(str, left+1, right)||isPalindrome(str, left, right-1)){
                    return true;
                }else return false;
            }
            
       }
       return true;
    }

    public boolean isPalindrome(String str, int left, int right){
        while(left <= right){
            if(str.charAt(left++) == str.charAt(right--)){
                continue;
            }else return false;
       }
       return true;
    }
}
